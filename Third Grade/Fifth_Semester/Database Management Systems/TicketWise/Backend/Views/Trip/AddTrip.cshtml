@model Ticketwise.Models.Trip

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Trip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #e8f0ff, #ffffff);
            font-family: Arial, sans-serif;
            color: #333;
        }

        .form-container {
            max-width: 600px;
            margin: 70px auto;
            padding: 15px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
        }

        .form-header {
            text-align: center;
            margin-bottom: 15px;
        }

        .form-header h2 {
            font-size: 1.4rem;
            color: #0056b3;
        }

        .form-control {
            font-size: 0.9rem;
            padding: 0.4rem 0.6rem;
            border-radius: 8px;
            border: 1px solid #ccc;
            transition: border-color 0.3s;
        }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 5px rgba(0, 86, 179, 0.5);
        }

        .form-label {
            font-weight: bold;
            font-size: 0.95rem;
        }

        .btn-primary {
            width: 100%;
            padding: 0.6rem;
            font-size: 0.95rem;
            border-radius: 8px;
            background-color: #0056b3;
            border-color: #0056b3;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #003d80;
            border-color: #003d80;
        }

        .cancel-link {
            text-align: center;
            margin-top: 10px;
        }

        .cancel-link a {
            color: #555;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .cancel-link a:hover {
            text-decoration: underline;
            color: #0056b3;
        }

         .mb-3 {
            margin-bottom: 1rem;
        }

        .form-control {
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="form-header">
                <h2>Add New Trip</h2>
            </div>
            <form asp-action="AddTrip" method="post">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="VehicleId" class="form-label">Vehicle</label>
                        <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleList">
                            <option value="">Select Vehicle</option>
                        </select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Origin" class="form-label">Origin</label>
                        <select asp-for="Origin" class="form-control" asp-items="ViewBag.Cities">
                            <option value="">Select City</option>
                        </select>
                        <span asp-validation-for="Origin" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Destination" class="form-label">Destination</label>
                        <select asp-for="Destination" class="form-control" asp-items="ViewBag.Cities">
                            <option value="">Select City</option>
                        </select>
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Date" class="form-label">Date</label>
                        <input asp-for="Date" type="date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DepartureTime" class="form-label">Departure Time</label>
                        <input asp-for="DepartureTime" type="time" class="form-control" />
                        <span asp-validation-for="DepartureTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TravelTime" class="form-label">Travel Time (hours)</label>
                        <input asp-for="TravelTime" type="number" step="0.5" class="form-control" />
                        <span asp-validation-for="TravelTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Cost" class="form-label">Cost</label>
                        <input asp-for="Cost" type="number" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mb-3">Save</button>
                <div class="cancel-link">
                    <a asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
